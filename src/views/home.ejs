<!DOCTYPE html>
<html lang="en">
    <%- include("./includes/head.ejs") %>
<body>
    <%- include('./includes/header.ejs') %>
    <main>
        <section>
            <h2>Ofertas</h2>
            
           <% articles.filter(art => art.offert).forEach(art => { %>
            <article>
                <h1><%= art.title %></h1>
                <img src="<%= art.img %> " alt="">
                <p><%= art.description %></p>
            </article>
           <% }) %>
        </section>
    </main>
</body>
</html>